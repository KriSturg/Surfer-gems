#!/bin/bash
# Launch Freeview for an Input Subject
# ------------------------------------------------------------------------------------------
# Default Arguments
# -------------------
hname=$(hostname)
mach=$(machine)
cd ~/..
me=$(whoami)
usrpth=$(pwd)
usrpth=$usrpth/$me
cd $usrpth
d=$(date)

subjid=bert
# ------------------------------------------------------------------------------------------# --------
# ------------------------------------------------------------------------------------------
# Begin Script
freeview \
    -v $SUBJECTS_DIR/$subjid/mri/brainmask.mgz \
    $SUBJECTS_DIR/$subjid/mri/T1.mgz \                                                             $SUBJECTS_DIR/$subjid/mri/wm.mgz:colormap=heat:opacity=0.4:visible=0 \
    -f $SUBJECTS_DIR/$subjid/surf/lh.white:edgecolor=blue \
    $SUBJECTS_DIR/$subjid/surf/lh.pial:edgecolor=red \
    $SUBJECTS_DIR/$subjid/surf/rh.white:edgecolor=blue \
    $SUBJECTS_DIR/$subjid/surf/rh.pial:edgecolor=red"
